<idea-plugin>
    <id>org.apache.ofbiz.pluginIntellijNereide</id>
    <name>OFBiz IDEA Integration</name>
    <vendor email="" url="">OFBiz</vendor>

    <description><![CDATA[
    <p&gt;&lt;strong&gt;OFBiz&lt;/strong&gt; is the APACHE fundation free ERP. Strong and resilient, it is completely free to use and expand.
This plugin is based on the last Community release of the Scipio ERP plugin for IDEA, and aims to help you expand OFBiz for your needs.&lt;/p&gt;
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceInterface="org.apache.ofbiz.ProjectStructureInterface"
                        serviceImplementation="org.apache.ofbiz.ProjectStructureImpl" />

        <dom.fileMetaData implementation="org.apache.ofbiz.xml.dom.ControllerFileDescription"
                          rootTagName="site-conf" />

        <psi.referenceContributor language="XML" implementation="org.apache.ofbiz.xml.contributor.XmlContributor" />


    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>