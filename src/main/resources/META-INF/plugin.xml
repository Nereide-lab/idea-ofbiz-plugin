<idea-plugin>
    <id>org.apache.ofbiz.pluginIntellijNereide</id>
    <name>OFBiz IDEA Integration</name>
    <vendor email="" url="">OFBiz</vendor>

    <description><![CDATA[
    &lt;p&gt;&lt;strong&gt;OFBiz&lt;/strong&gt; is the APACHE fundation free ERP. Strong and resilient, it is completely free to use and expand.
    This plugin aims to help you expand OFBiz for your needs.&lt;/p&gt;
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">

        <!-- Utilitaires de projet / récupération de fichiers pour recherches -->
        <projectService serviceInterface="org.apache.ofbiz.project.ProjectServiceInterface"
                        serviceImplementation="org.apache.ofbiz.project.ProjectServiceImpl" />

        <!-- Support des reférences XML -->
        <psi.referenceContributor language="XML" implementation="org.apache.ofbiz.contributor.XmlContributor"/>

        <!-- Descriptions de fichier XML -->
        <dom.fileMetaData implementation="org.apache.ofbiz.dom.ControllerFileDescription" rootTagName="site-conf" />
        <dom.fileMetaData implementation="org.apache.ofbiz.dom.EntityModelFileDescription" rootTagName="entitymodel" />

    </extensions>
</idea-plugin>